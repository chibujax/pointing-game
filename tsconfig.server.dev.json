{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "outDir": "./dist/server"
    },
    "include": ["server/**/*", "src/types/**/*"],
    "exclude": ["node_modules", "dist", "src/**/*", "!src/types/**/*"]
  }