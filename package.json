{
    "name": "pointing-game",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "engines": {
        "node": "16.x"
    },
    "scripts": {
        "start": "node dist/server.js",
        "build:client": "webpack --mode production",
        "build": "npm run build:client && tsc",
        "dev:client": "webpack --mode development --watch",
        "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
        "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
        "test": "jest",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/socket.io-client": "^3.0.0",
        "cookie-parser": "^1.4.6",
        "express": "^4.19.2",
        "socket.io": "^4.7.5",
        "socket.io-client": "^4.8.1",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.8",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.10.7",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "concurrently": "^8.2.2",
        "copy-webpack-plugin": "^12.0.2",
        "css-loader": "^6.8.1",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.3",
        "html-webpack-plugin": "^5.6.0",
        "jest": "^29.7.0",
        "mini-css-extract-plugin": "^2.7.6",
        "prettier": "^3.4.2",
        "style-loader": "^3.3.3",
        "ts-jest": "^29.1.2",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/*.d.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        }
    }
}
